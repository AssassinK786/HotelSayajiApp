<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24sp"
    android:background="@drawable/welcome"
    tools:context=".roomActivity1">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Standard Class"
    android:textSize="30sp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="* 18% GST Charges Added"
    android:textSize="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/room11"
        android:layout_marginTop="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms will have 4-star facilities"
        android:textSize="20sp"
        android:layout_marginTop="10sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And Amenities Available "
        android:textSize="20sp"
        android:layout_marginTop="5sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Of Rooms Required"
        android:textSize="20sp"
        android:layout_marginTop="5sp"/>

    <EditText
        android:id="@+id/ET_room1"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Per Room â‚¹5000/-"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 People (Per Room)"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_std"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="15sp"
        android:text="Pay the Amount "/>

    <TextView
        android:id="@+id/txt_ans1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="20sp"/>


</LinearLayout>